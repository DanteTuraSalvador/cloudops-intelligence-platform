{
  "name": "cloudops-intelligence-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Cloud monitoring and cost optimization SaaS platform",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:ts": "pnpm -r --filter './packages/*' --filter './services/api-gateway' --filter './services/data-collector' --filter './services/alert-service' build",
    "build:dotnet": "dotnet build CloudOps.sln",
    "test": "pnpm -r test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:integration": "docker compose -f docker-compose.test.yml up --abort-on-container-exit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yaml,yml}\"",
    "typecheck": "pnpm -r typecheck",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "cdk:synth": "pnpm --filter @cloudops/infrastructure synth",
    "cdk:deploy": "pnpm --filter @cloudops/infrastructure deploy",
    "cdk:diff": "pnpm --filter @cloudops/infrastructure diff",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0"
  }
}
